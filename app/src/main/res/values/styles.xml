<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:soundEffectsEnabled">false</item>
        <item name="colorControlNormal">@color/gray_light_third</item>
        <item name="colorControlActivated">@color/red_primary</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <style name="Theme.Opaque" parent="Theme.Transparent">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/gray_light</item>
    </style>

    <style name="DialogFragments" parent="@style/Theme.Transparent">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dialog_fragments_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fragments_out</item>
    </style>

    <style name="style_white_text_h1">
        <item name="android:textSize">@dimen/font_xxlarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_button_primary">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button_blue_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="style_button_secondary">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button_red_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_edit_text_primary">
        <item name="android:textSize">@dimen/font_large</item>
        <!--<item name="android:paddingEnd">@dimen/spacing_xlarge</item>-->
        <!--<item name="android:paddingStart">@dimen/spacing_xlarge</item>-->
        <item name="android:textColor">@color/gray_mid</item>
        <item name="android:textColorHint">@color/gray_mid</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_text_view_gray_large">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/gray_mid</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_floating_label" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="style_edit_text_form_no_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/edittext_color</item>
        <item name="android:textColorHint">@color/gray_light_third</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="style_edit_text_error_message">
        <item name="android:textSize">@dimen/font_micro</item>
        <item name="android:textColor">@color/red_primary</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:layout_marginLeft">@dimen/spacing_xxxxlarge</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/spacing_large</item>
        <item name="android:background">@color/white</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="style_edit_text_form_custom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/edittext_color</item>
        <item name="android:textColorHint">@color/gray_light_third</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

</resources>
